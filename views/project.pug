extends layout.pug


block content 

  nav.grid-container.portfolio-breadcrumb

    a(href='/') ‚Üê Back

  article.grid-container.portfolio-intro.portfolio-project

    .grid-x

      .cell.small-6.medium-9.large-9



        //- project title

        h1 #{projects[id].project_name}



        //- project description

        p.lead.text-light

          | #{projects[id].description}



      .cell.portfolio-meta.small-6.medium-2.large-3

        h6 Technologies



        //- dynamic list of tehnologies used in the project

         
        ul

        each val in projects[id].technologies

          li= val


     



        //- urls to live link and github
        a.button.expanded(href=`${projects[id].live_link}` target="_blank") Live Demo

        a.button.expanded(href=`${projects[id].github_link}` target="_blank") GitHub Repo

    

    //- project images

    

    img.image(src=`${projects[id].image_urls[1]}`)

    img.image(src=`${projects[id].image_urls[2]}`)

    