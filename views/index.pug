extends layout.pug



block content 

  article.grid-container.portfolio-intro

    div

      h1 My Portfolio

      p.lead.text-light

        | In my portfolio you will find some of the projects I have completed during my JavaScript FullStack Techdegree at TeamTreehouse. 
        
  article.grid-container.portfolio-index

    

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    
        each project in projects
          .cell
             a(href=`http://localhost:3000/project/${project.id}` target="_blank")
              img(src= `${project.image_urls[0]}`)
              h5 #{project.project_name}


